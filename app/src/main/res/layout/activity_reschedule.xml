<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenedor principal -->
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nombre de la Actividad -->
        <TextView
            android:id="@+id/activityNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la Actividad"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:paddingBottom="8dp" />

        <!-- Fecha y Hora Actual -->
        <TextView
            android:id="@+id/currentDateTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha y Hora Actual"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:paddingBottom="16dp" />

        <!-- Motivo de Reprogramación -->
        <EditText
            android:id="@+id/reasonEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Motivo de reprogramación"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:padding="8dp"
            android:background="@drawable/rounded_edittext_background"
            android:paddingBottom="16dp" />

        <!-- Botón para Seleccionar Nueva Fecha y Hora -->
        <Button
            android:id="@+id/selectNewDateTimeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar Nueva Fecha y Hora"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorOnPrimary"
            android:layout_marginBottom="16dp" />

        <!-- Botón para Guardar Reprogramación -->
        <Button
            android:id="@+id/saveRescheduleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar Reprogramación"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorOnPrimary" />

    </LinearLayout>

</ScrollView>

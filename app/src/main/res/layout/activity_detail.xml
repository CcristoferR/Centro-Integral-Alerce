<!-- activity_detail.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nombre de la actividad -->
        <TextView
            android:id="@+id/activityNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la Actividad:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activityNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la Actividad" />

        <!-- Fecha -->
        <TextView
            android:id="@+id/activityDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha:"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/activityDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de la Actividad" />

        <!-- Lugar -->
        <TextView
            android:id="@+id/activityLocationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lugar:"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/activityLocationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lugar de la Actividad" />

        <!-- Proveedor -->
        <TextView
            android:id="@+id/activityProviderLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proveedor:"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/activityProviderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proveedor" />

        <!-- Beneficiarios -->
        <TextView
            android:id="@+id/activityBeneficiariesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beneficiarios:"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/activityBeneficiariesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beneficiarios" />

        <!-- Cupo -->
        <TextView
            android:id="@+id/activityCupoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cupo:"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/activityCupoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cupo" />

        <!-- Capacitación -->
        <TextView
            android:id="@+id/activityCapacitacionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capacitación:"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/activityCapacitacionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capacitación" />

        <!-- Archivo adjunto -->
        <TextView
            android:id="@+id/activityFileLinkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abrir archivo adjunto"
            android:textColor="@android:color/holo_blue_dark"
            android:visibility="gone"
            android:clickable="true"
            android:paddingTop="16dp" />
    </LinearLayout>
</ScrollView>

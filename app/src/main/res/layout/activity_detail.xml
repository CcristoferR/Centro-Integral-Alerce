<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/activityNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de la Actividad"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/activityDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de la Actividad"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/activityLocationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lugar de la Actividad"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/activityTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de Actividad"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/activityProviderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proveedor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/activityDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DescripciÃ³n"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/activityBeneficiariesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beneficiarios"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/activityPlaceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lugar"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/activityFileLinkTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abrir archivo adjunto"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_dark"
        android:visibility="gone"
        android:clickable="true" />
</LinearLayout>

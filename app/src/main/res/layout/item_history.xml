<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemHistoryLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/white"
    android:layout_marginBottom="8dp"
    android:elevation="2dp"
    android:clipToPadding="false"
    android:layout_marginHorizontal="8dp">

    <!-- Nombre de la actividad -->
    <TextView
        android:id="@+id/activityNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:text="Nombre de la Actividad"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Fecha y Hora -->
    <TextView
        android:id="@+id/activityDateTimeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha: 01/01/2024 Hora: 12:00"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:paddingBottom="4dp" />

    <!-- Estado -->
    <TextView
        android:id="@+id/activityStatusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estado: Activa"
        android:textSize="14sp"
        android:textColor="@color/statusColor"
        android:paddingBottom="4dp" />

    <!-- Raz贸n de cancelaci贸n -->
    <TextView
        android:id="@+id/activityCancellationReasonTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Raz贸n de cancelaci贸n"
        android:textSize="14sp"
        android:textColor="@android:color/holo_red_dark"
        android:paddingBottom="4dp"
        android:visibility="gone" />

    <!-- Reprogramaciones -->
    <TextView
        android:id="@+id/activityReschedulesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reprogramaciones"
        android:textSize="14sp"
        android:textColor="@android:color/holo_orange_dark"
        android:visibility="gone" />
</LinearLayout>
